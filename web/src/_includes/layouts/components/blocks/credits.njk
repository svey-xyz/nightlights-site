{#
	Basic Credit's Section Block.
#}

<div class="main-padding block-padding w-full">
	<div class="w-full flex flex-wrap flex-col md:flex-row justify-center sm:-mx-4">
		{% asyncEach credit in section.credits %}
			<a href="{{ credit.creditLink }}" rel="noreferrer" target="_blank"
					class="group relative overflow-hidden flex w-full flex-grow max-w-prose-short my-4 md:w-1/3 md:min-w-[25%] 
					rounded-3xl shadow-md bg-primary-bg mx-auto md:mx-4
					transform duration-150 hover:scale-102">
				<div class="m-4">
					<h3 class="break-words">{{ credit.creditName }}</h3>
					<span class="">{{ credit.creditBlurb }}</span>
				</div>
			</a>
		{% endeach %}
	</div>
</div>