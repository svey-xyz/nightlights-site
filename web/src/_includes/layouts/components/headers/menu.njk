{#
	Menu block separated from header for legibility
#}

<div id="menu-container" class="fixed z-40 min-w-full min-h-full pointer-events-none">
	<div id="menu-background" class="fixed min-w-full min-h-full bg-primary-accent transition-all duration-300 opacity-0"></div>

	<div id="menu" class="transition-spacing duration-500 max-w-screen-xl mx-auto px-0 md:px-24 flex md:block-padding h-screen md:h-auto opacity-0">
		<div class="flex flex-col md:justify-center z-10 w-full overflow-hidden bg-primary-bg md:flex-row md:rounded-xl md:shadow-lg">
			{# IDENTITY CONTAINER #}
			<div id="identity-container" class="transition-spacing duration-500 filter flex border-b-2 bg-secondary-bg px-6 py-6 sm:px-12 md:px-6 lg:px-12 md:border-b-0 md:border-r-2 border-secondary-accent">
				{% image site.siteSettings.signature , "lazy relative m-0 svg-theme-colour h-auto w-16 md:w-24", 'Artist Signature', "100px", [100] %}
			</div>

			{# RIGHT SIDE WRAPPER #}
			<div class="relative transition-spacing duration-500 flex flex-col p-6 bg-gradient-to-b md:bg-gradient-to-r from-secondary-bg via-primary-bg to-primary-bg w-full px-6 sm:px-12">
				{# NAVIGATION CONTAINER #}
				<div class="relative flex md:inline-block flex-col md:flex-row justify-start items-start">
					{% for navItem in site.navigation.primaryNavigation %}
						<div class="relative md:inline-block group mb-1 mr-10 last:mr-0">
							<h6 class="relative z-10"><a href="/{{ navItem.slug | slug }}" class="relative z-10 duration-200
							after:bg-gradient-to-r after:from-primary-accent after:to-secondary-accent
							after:absolute after:left-0 after:bottom-[-4px] after:overflow-hidden after:h-1 after:rounded-sm after:-z-1
							after:duration-200 after:w-0 group-hover:after:w-full">
								{{ navItem.title }}
							</a></h6>
						</div>	
					{% endfor %}
				</div>

				{# CONTACT CONTAINER #}
				<a href="mailto:hayden@haydensoule.com" class="inline-block">
					<div class="group inline-flex flex-col mt-10 md:mt-5">
						{# {% set emailHalves %}
							{% emailSplitter site.about.email %}
						{% endset %} #}
						{% for emailPart in site.about.email | emailSplitter %}
							<div class="pb-2 relative inline-block">
								<div class="relative inline-block">
									<h5 class="relative leading-xs uppercase font-black z-10 text-medium-accent after:accent-highlight">{{ emailPart }}</h5>
								</div>
							</div>
						{% endfor %}
					</div>
				</a>
			</div>

			<div class="main-padding w-full z-10 md:fixed md:bottom-0">
				{% set iconColour %}
				{% endset %}
				{% include ("layouts/components/footers/menu-footer.njk") %}
			</div>
		</div>
	</div>
</div>